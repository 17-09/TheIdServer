@page "/clients"
@inherits ClientModel

<h1>Clients</h1>

@if (ClientList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th><SortHeader PropertyName="Id" HeaderName="id" /></th>
                <th><SortHeader PropertyName="ClientName" HeaderName="name" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in ClientList)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>
                        @client.ClientName
                        <div><em>@client.Description</em></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

