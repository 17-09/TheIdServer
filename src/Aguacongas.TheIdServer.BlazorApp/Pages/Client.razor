@page "/clients"
@inherits ClientModel

<h1>Clients</h1>

@if (ClientList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th @onclick="async () => await SortById()">id</th>
                <th>name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in ClientList)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>
                        @client.ClientName
                        <em>@client.Description</em>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

