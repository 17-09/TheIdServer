@using Microsoft.AspNetCore.Identity
@page "/cultures"
@inherits EntitiesModel<Entity.Culture>

<div class="row sticky-top bg-light">
    <div class="col">
        <PageListHeader Name="Supported cultures" Url="culture"></PageListHeader>
    </div>
    <div class="col">
        <Filter TermChanged="OnFilterChanged" />
    </div>
    <EntitiesGrid Items="EntityList" TableClass="table mb-0">
        <TableHeader>
            <th scope="col">
                <SortableHeader Property="Id"
                                Text="name"
                                GridState="GridState" />
            </th>
        </TableHeader>
    </EntitiesGrid>
</div>
<div class="row">
    @if (EntityList == null)
    {
        <p class="col"><em>Loading...</em></p>
    }
    else
    {
        <EntitiesGrid Items="EntityList" TableClass="table table-hover"
                      RowClicked="(Entity.Culture item) => OnRowClicked(item)">
            <RowTemplate>
                <td>@context.Id</td>
            </RowTemplate>
        </EntitiesGrid>
    }
</div>

