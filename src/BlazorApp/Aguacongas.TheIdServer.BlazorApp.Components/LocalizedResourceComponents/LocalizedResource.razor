<div class="form-group row">
    <label class="col-2 col-form-label">
        key
    </label>
    <div class="col">
        @if (string.IsNullOrEmpty(Model.Id))
        {
            <AuthorizeText @bind-Value="@Model.Key" />
        }
        else
        {
            <input class="form-control" type="text" value="@Model.Key" readonly>
        }
    </div>
</div>
<div class="form-group row">
    <label class="col-2 col-form-label">
        value
    </label>
    <div class="col">
        <AuthorizeTextArea @bind-Value="@Model.Value" />
    </div>
</div>