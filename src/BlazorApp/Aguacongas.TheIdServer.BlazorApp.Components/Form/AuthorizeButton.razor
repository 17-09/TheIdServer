@inherits ButtonBase
<AuthorizeView Policy="Is4-Writer">
    <Authorized>
        @if (Clicked.HasDelegate)
        {
            <button class="btn @CssSubClass" type="@Type" @onclick="Clicked">
                @ChildContent
            </button>
        }
        else
        {
            <button class="btn @CssSubClass" type="@Type">
                @ChildContent
            </button>
        }
    </Authorized>
</AuthorizeView>
