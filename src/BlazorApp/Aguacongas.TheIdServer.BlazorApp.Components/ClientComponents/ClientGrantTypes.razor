<div class="row">
    <div class="col">
        <ul class="list-inline">
            @foreach (var grantType in GrantTypes)
            {
                <li @key="grantType" class="list-inline-item">
                    <GrantType Entity="@grantType"
                               Model="@Model"
                               DeleteClicked="() => OnGrantTypeDeletedClicked(grantType)" />
                </li>
            }
            <li class="list-inline-item">
                <GrantType Entity="@_grantType"
                           Model="@Model"
                           ValueChanged="() => OnGrantTypeValueChanged(_grantType)" />
            </li>
        </ul>
    </div>
</div>
